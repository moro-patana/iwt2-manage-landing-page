{
  "name": "iwt2-manage-landing-page",
  "version": "1.0.0",
  "description": "![Design preview for the Manage landing page coding challenge](./design/desktop-preview.jpg)",
  "main": "index.js",
  "scripts": {
    "css": "node-sass scss -o webroot/css",
    "css:watch": "npm run css && node-sass scss -w -o webroot/css",
    "build": "npm-run-all build:css build:html",
    "build:css": "node-sass src/site/_includes/css/main.scss > src/site/css/main.css",
    "build:html": "eleventy",
    "watch": "npm-run-all --parallel watch:css watch:html",
    "watch:css": "node-sass --watch src/site/_includes/css/main.scss > src/site/css/main.css",
    "watch:html": "eleventy --serve --port=8181",
    "start": "npm run watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moro-patana/iwt2-manage-landing-page.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/moro-patana/iwt2-manage-landing-page/issues"
  },
  "homepage": "https://github.com/moro-patana/iwt2-manage-landing-page#readme",
  "dependencies": {
    "node-sass": "^5.0.0"
  }
}
